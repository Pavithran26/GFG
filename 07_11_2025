//Weighted Job Scheduling
import java.util.*;

class Solution {
    public int maxProfit(int[][] jobs) {
        int n = jobs.length;
        
        // Sort jobs by end time
        Arrays.sort(jobs, (a, b) -> Integer.compare(a[1], b[1]));
        
        // dp[i] will store maximum profit considering first i jobs
        int[] dp = new int[n];
        dp[0] = jobs[0][2];
        
        for (int i = 1; i < n; i++) {
            // Option 1: Don't take current job
            int profitWithoutCurrent = dp[i - 1];
            
            // Option 2: Take current job + maximum profit from compatible jobs
            int profitWithCurrent = jobs[i][2];
            
            // Find the last job that doesn't overlap with current job
            int lastCompatibleIndex = findLastCompatibleJob(jobs, i);
            
            if (lastCompatibleIndex != -1) {
                profitWithCurrent += dp[lastCompatibleIndex];
            }
            
            // Take maximum of both options
            dp[i] = Math.max(profitWithoutCurrent, profitWithCurrent);
        }
        
        return dp[n - 1];
    }
    
    private int findLastCompatibleJob(int[][] jobs, int currentIndex) {
        int low = 0, high = currentIndex - 1;
        int currentStart = jobs[currentIndex][0];
        
        while (low <= high) {
            int mid = (low + high) / 2;
            
            if (jobs[mid][1] <= currentStart) {
                // This job is compatible, check if there's a later compatible job
                if (jobs[mid + 1][1] <= currentStart) {
                    low = mid + 1;
                } else {
                    return mid;
                }
            } else {
                high = mid - 1;
            }
        }
        
        return -1;
    }
}