//Largest number in one swap
class Solution {
    public String largestSwap(String s) {
        char[] arr = s.toCharArray();
        char maxDigit = '0';
        int maxIndex = -1;
        int left = -1, right = -1;

        // Traverse from right to left
        for (int i = arr.length - 1; i >= 0; i--) {
            if (arr[i] > maxDigit) {
                maxDigit = arr[i];
                maxIndex = i;
            } else if (arr[i] < maxDigit) {
                left = i;
                right = maxIndex;
            }
        }

        if (left == -1) return s; // No swap needed

        // Swap the digits
        char temp = arr[left];
        arr[left] = arr[right];
        arr[right] = temp;

        return new String(arr);
    }
}
