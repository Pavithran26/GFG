//Shop in Candy Store
import java.util.*;

class Solution {
    public ArrayList<Integer> minMaxCandy(int[] prices, int k) {
        ArrayList<Integer> result = new ArrayList<>();
        Arrays.sort(prices); // sort ascending
        
        // Minimum cost calculation
        int minCost = 0;
        int i = 0; 
        int j = prices.length - 1;
        while (i <= j) {
            minCost += prices[i];
            i++;
            j -= k; // taking k most expensive for free
        }
        
        // Maximum cost calculation
        int maxCost = 0;
        i = 0; 
        j = prices.length - 1;
        while (j >= i) {
            maxCost += prices[j];
            j--;
            i += k; // taking k cheapest for free
        }
        
        result.add(minCost);
        result.add(maxCost);
        return result;
    }
}
